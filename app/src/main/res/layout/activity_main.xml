<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.nam.nv.MainActivity">

    <Button
        android:id="@+id/activity_main_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_main_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="終了"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_main_start"
        app:layout_constraintStart_toStartOf="@+id/activity_main_start"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_start" />
</androidx.constraintlayout.widget.ConstraintLayout>